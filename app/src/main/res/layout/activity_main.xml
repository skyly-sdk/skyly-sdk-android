<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/getOffers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getOffers"
            android:text="Get offers programmatically" />

        <Button
            android:id="@+id/copyUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="copyUrl"
            android:text="Copy offer wall url" />

        <Button
            android:id="@+id/openBrowser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openBrowser"
            android:text="Open wall in browser" />

        <Button
            android:id="@+id/openWebview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openWebView"
            android:text="Open wall in WebView" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>